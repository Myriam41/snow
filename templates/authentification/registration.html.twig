{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Inscription</h1>

{{ form_start(form)}}

{{ form_row(form.pseudo, {'label': 'Pseudo','attr':{'placeholder':'Pseudo...'}}) }}
{{ form_row(form.mail, {'label': 'Mail','attr':{'placeholder':'Adresse email...'}})}}
{{ form_row(form.Password, {'label': 'Mot de passe','attr':{'placeholder':'Mot de passe...'}})}}
{{ form_row(form.confirmPassword, {'label': 'Confirmer le mot de passe','attr':{'placeholder':'Répétez votre mot de passe'}})}}

<button type="submit" class="btn btn-success">Inscription</button>
{{ form_end(form)}}
</div>
{% endblock %}
